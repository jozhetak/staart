{
  "name": "staart",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AnandChowdhary/staart.git",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build-compile && yarn build-routes",
    "build-compile": "touch .env && mkdir -p dist && cp .env dist/.env && tsc",
    "build-routes": "node dist/builder/routes.js",
    "start": "concurrently 'yarn watch-build' 'yarn watch-prettier' 'yarn watch-server' 'yarn watch-routes'",
    "start-builder": "concurrently 'yarn watch-build' 'yarn watch-prettier' 'yarn watch-builder'",
    "watch-build": "onchange '{src,builder,examples}/**/*.ts' -- yarn build-compile",
    "watch-routes": "onchange 'src/router/**/*.ts' -- yarn build-routes",
    "watch-prettier": "onchange '{src,builder,examples}/**/*.{ts,json}' -- prettier --write {{changed}}",
    "watch-server": "cd dist/src && nodemon index.js",
    "watch-builder": "nodemon dist/routes.js",
    "prettier-all": "prettier '{src,builder,examples}/**/*.{ts,json}' --write",
    "generate-docs": "typedoc --out docs ./src"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.12",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/marked": "^0.6.5",
    "@types/mustache": "^0.8.32",
    "@types/mysql": "^2.15.6",
    "@types/node": "^11.13.8",
    "@types/recursive-readdir": "^2.2.0",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "jest": "^24.7.1",
    "nodemon": "^1.19.0",
    "onchange": "^5.2.0",
    "prettier": "^1.17.0",
    "recursive-readdir": "^2.2.2",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-async-handler": "^1.1.4",
    "fs-extra": "^7.0.1",
    "googleapis": "^39.2.0",
    "ip-anonymize": "^0.0.6",
    "jsonwebtoken": "^8.5.1",
    "marked": "^0.6.2",
    "mustache": "^3.0.1",
    "mysql": "^2.17.1",
    "node-cache": "^4.2.0",
    "node-emoji": "^1.10.0",
    "node-ses": "^2.2.0"
  }
}
